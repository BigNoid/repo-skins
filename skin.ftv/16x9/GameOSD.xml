<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- contextmenu -->
	<defaultcontrol always="true">1000</defaultcontrol>
	<coordinates>
		<origin x="0" y="0"/>
	</coordinates>
	<controls>
		<control type="group">
			<visible>!Window.IsActive(GameVideoFilter) + !Window.IsActive(GameViewMode) + !Window.IsActive(GameControllers)</visible>
			<!-- Background -->
			<include>DialogBackgroundImage</include>
			<!-- Dialog group -->
			<control type="group">
				<include>DialogAnimation</include>
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>558</width>
				<height>564</height>
				<!-- Dialog background image -->
				<control type="image">
					<width>100%</width>
					<height>100%</height>
					<texture>dialogs/game_osd_back.png</texture>
				</control>
				<!-- Heading -->
				<control type="label" id="1">
					<left>40</left>
					<top>14</top>
					<height>30</height>
					<width>558</width>
					<aligny>center</aligny>
					<font>Bold30</font>
					<textcolor>ffdadada</textcolor>
					<label>35221</label>
				</control>
				<!-- Grouplist template -->
				<control type="grouplist" id="1000">
					<top>60</top>
					<width>100%</width>
					<height>504</height>
					<itemgap>0</itemgap>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<!-- Resume button -->
					<control type="button" id="1001">
						<width>100%</width>
						<height>84</height>
						<font>Light32</font>
						<textoffsetx>40</textoffsetx>
						<textcolor>ff505153</textcolor>
						<focusedcolor>ffffaf37</focusedcolor>
						<texturefocus border="3">settings/button_focus.png</texturefocus>
						<texturenofocus border="3">settings/button_no_focus.png</texturenofocus>
						<label>13404</label>
						<label2>Select + X</label2>
						<onclick>Play</onclick>
					</control>
					<!-- Reset button -->
					<control type="button" id="1002">
						<width>100%</width>
						<height>84</height>
						<font>Light32</font>
						<textoffsetx>40</textoffsetx>
						<textcolor>ff505153</textcolor>
						<focusedcolor>ffffaf37</focusedcolor>
						<texturefocus border="3">settings/button_focus.png</texturefocus>
						<texturenofocus border="3">settings/button_no_focus.png</texturenofocus>
						<label>10035</label>
						<label2>Select + B</label2>
						<onclick>PlayerControl(Reset)</onclick>
					</control>
					<!-- Stop button -->
					<control type="button" id="1003">
						<width>100%</width>
						<height>84</height>
						<font>Light32</font>
						<textoffsetx>40</textoffsetx>
						<textcolor>ff505153</textcolor>
						<focusedcolor>ffffaf37</focusedcolor>
						<label>35222</label>
						<label2>Select + Start</label2>
						<onclick>Stop</onclick>
						<texturefocus border="3">settings/button_focus.png</texturefocus>
						<texturenofocus border="3">settings/button_no_focus.png</texturenofocus>
					</control>
					<!-- Video filter button -->
					<control type="button" id="1004">
						<width>100%</width>
						<height>84</height>
						<font>Light32</font>
						<textoffsetx>40</textoffsetx>
						<textcolor>ff505153</textcolor>
						<focusedcolor>ffffaf37</focusedcolor>
						<texturefocus border="3">settings/button_focus.png</texturefocus>
						<texturenofocus border="3">settings/button_no_focus.png</texturenofocus>
						<label>230</label>
						<onclick>ActivateWindow(GameVideoFilter)</onclick>
					</control>
					<!-- View mode button -->
					<control type="button" id="1005">
						<width>100%</width>
						<height>84</height>
						<font>Light32</font>
						<textoffsetx>40</textoffsetx>
						<textcolor>ff505153</textcolor>
						<focusedcolor>ffffaf37</focusedcolor>
						<texturefocus border="3">settings/button_focus.png</texturefocus>
						<texturenofocus border="3">settings/button_no_focus.png</texturenofocus>
						<label>629</label>
						<onclick>ActivateWindow(GameViewMode)</onclick>
					</control>
					<!-- Input settings button -->
					<control type="button" id="1006">
						<width>100%</width>
						<height>84</height>
						<font>Light32</font>
						<textoffsetx>40</textoffsetx>
						<textcolor>ff505153</textcolor>
						<focusedcolor>ffffaf37</focusedcolor>
						<texturefocus border="3">settings/button_focus.png</texturefocus>
						<texturenofocus border="3">settings/button_no_focus.png</texturenofocus>
						<label>35223</label>
						<onclick>ActivateWindow(gamecontrollers)</onclick>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>